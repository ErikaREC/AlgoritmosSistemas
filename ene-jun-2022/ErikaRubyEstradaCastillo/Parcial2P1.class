package MetodosDeOrdenamiento;
import java.util.Arrays;

public class Parcial2P1 {
	public static void countingSort(int[] input, int k) {
        int counter[] = new int[k + 1]; // Se llenan los cubos o casilleros
        for (int i : input) {
            counter[i]++;
        } // Ordena la matriz
        int ndx = 0; 
        for (int i = 0; i < counter.length; i++){
            while (0 < counter[i]) {
                input[ndx++] = i;
                counter[i]--; 
            } 
        } 
    }
    
    public static void main(String[] args) {
        int[] input = { 375892,90334,203569,403236,479983,122112,200,223211 }; 
        int mayor = input[0];
		
		for (int x = 1; x < input.length; x++) {
			if (input[x] > mayor) {
				mayor = input[x];
			}
		}
		
		
        countingSort(input, mayor); 
        System.out.println("Números ordenados con Counting Sort");
        
