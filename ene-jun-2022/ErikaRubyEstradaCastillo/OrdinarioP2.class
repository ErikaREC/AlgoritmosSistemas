        String[] Cosas = {"TacosPastor", "Teclado", "Audífonos", "NintendoSwitch", "Iphone","LaptopLenovo"};
	    String busqueda = "Teclado";
	    
	    int indiceDelElementoBuscado = busquedaBinariaConWhile(Cosas, busqueda);
	    System.out.println("El elemento buscado"+  indiceDelElementoBuscado);

